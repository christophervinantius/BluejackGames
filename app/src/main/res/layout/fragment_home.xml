<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/taskbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/home_btn"
            android:text="Home"
            android:textSize="20sp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:enabled="false"
            android:backgroundTint="@color/red_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/about_btn"
            android:text="About"
            android:textSize="20sp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="20dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/logout_btn"
            android:text="Logout"
            android:textSize="20sp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="20dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/welcome_textview"
        android:text="Welcome, !"
        android:textSize="36sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/taskbar"/>

    <ImageView
        android:id="@+id/homeLogo_imageview"
        android:src="@drawable/bluejack_games"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_textview"/>

    <TextView
        android:id="@+id/products_textview"
        android:text="See products:"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/homeLogo_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/products_btn"
        android:text="Products"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:backgroundTint="@color/red"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/products_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>